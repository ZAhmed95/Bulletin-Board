<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bulletin Board</title>
  </head>
  <body>
    <a href="/messages">All posts</a>
    <h1>Post a message:</h1>
    <form class="" action="write" method="post">
      <input type="text" name="title" placeholder="Title" size="35">
      <br>
      <textarea name="body" rows="8" cols="80" placeholder="Enter message here"></textarea>
      <br>
      <input type="submit" name="submit">
    </form>

    <div class="messageList">
      <h1>Message Log:</h1>
      <ul>
        <% for (var i = 0; i < rows.length; i++){ %>
          <li><a href=<%="/messages/#m" + rows[i].id%>><%= rows[i].title %></a></li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
